<ul class="media-list">
  <% @favorites.each do |favorite| %>
    <% user = favorite.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to "Timeline", root_path %> <span class="text-muted">posted at <%= favorite.created_at %></span>
        </div>
        <div>
          <p><%= favorite.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @favorites %>
</ul>